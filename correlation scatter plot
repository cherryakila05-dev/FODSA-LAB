import pandas as pd
import matplotlib.pyplot as plt

# Sample data
data = {
    "Hours_Studied": [1, 2, 3, 4, 5, 6, 7, 8],
    "Marks_Scored": [35, 40, 50, 55, 65, 70, 75, 85]
}

# Create DataFrame
df = pd.DataFrame(data)

print("DataFrame:")
print(df)

# Calculate correlation
correlation = df["Hours_Studied"].corr(df["Marks_Scored"])
print("\nCorrelation between Hours Studied and Marks Scored:", correlation)

# Scatter plot
plt.scatter(df["Hours_Studied"], df["Marks_Scored"], color="blue")
plt.title("Scatter Plot of Hours Studied vs Marks Scored")
plt.xlabel("Hours Studied")
plt.ylabel("Marks Scored")
plt.grid(True)
plt.show()
